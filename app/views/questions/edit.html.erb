<h1>Edit question</h1>
<%= turbo_frame_tag "#{dom_id(@question)}_content" do %>
  <%= form_with(model:[@question]) do |f| %>
    <div class="grid grid-cols-4 gap-10">
      <div class="col-span-3 ml-16 " >
        <label class="form-control">
          <%= f.text_field :question, class:"input input-bordered bg-white " %>
        </label>
      </div>
      <div class="col-span-1">
        <div class="col-span-1 text-center flex">
          <div class="block mx-2" >
            <%= link_to :back, class: "btn btn-md bg-red-600 mx-8" do %>
              Cofnij
            <% end %>
          </div>
          <div class="mx-2">
            <%= f.submit "Edytuj", class: "btn btn-accent btn-md" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>