<%= turbo_frame_tag "questions_section" do %>
  <section id="qestions">
    <div class="m-4">
      <h3 class="text-2xl">
        Pytania:
      </h3>
    </div>
    <div>
      <%if user_signed_in? %>
        <div class="m-4">
          <%= render "questions/question_form", venue: @venue %>
        </div>
      <% end %>
    </div>
    <div>
      <%= render 'questions/questions_list', questions: @venue.questions%>
    </div>
  </section>
<% end %>