<div class="flex flex-col items-center min-h-screen bg-gray-100 p-8">
  <div class="w-full px-16">
    <%= form_tag venues_path, method: :get, data: { turbo_frame: "search-results", turbo_action: "advance",
     controller: "search", action: "input->search#submit"} do |f|%>
      <%= text_field_tag "query", nil, placeholder: "Wyszukaj lokal ...", class:"input w-full my-5 enabled:hover:bg-slate-200"%>
    <% end %>
  </div>
  <div class="grid grid-cols-12 gap-2">
    <div class="col-span-8">
      <%= turbo_frame_tag "search-results" do %>
        <%=render partial: 'venues/venues_list', locals: { venues: @venues}%>
      <% end %>
    </div>
    <%#
      <div id="menu" class="col-span-4  max-h-96 border">
      <div class="">
        <div class="m-2">
          <div>
            Search console
          </div>
        </div>
      </div>
    </div>
    %>
  </div>
</div>